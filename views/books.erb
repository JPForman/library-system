<h1>Bookstore to be Library</h1>

<h3>All Books In Store:</h3>

<form action="/albums">
  <div class="form-group">
    <label for="search">Search</label>
    <input id="search" name="search" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Search</button>
</form>

<h2>Books</h2>
<% if @books.any? %>
  <ul>
    <% @books.each do |book| %>
      <li><a href="/books/<%= book.id %>"><%= book.name %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no books to display.</p>
<% end %>

<a href="/books/new">Add a new book</a> <br>
